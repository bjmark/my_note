<%=form_tag @path,:method=>@method do%>
  <p>
  <%=label_tag :content,'content'%>
  <br/>
  <%=text_area_tag :content,@content,:cols=>80,:rows=>10%>
  </p>
  <p>
  <%=label_tag :names,'names'%><br/>
  <%=text_area_tag :names,@names.join("\n"),:cols=>80,:rows=>3%>
  </p>
  <%=submit_tag 'Save'%>
<%end%>
