<div class="searches">
  <%=render 'searches'%>
</div>

<%= form_tag(notes_path,:method=>'get',:id=>"search-form") do%>
  <%=search_field_tag(:word,params[:word],:class=>"input-medium search-query")%>
  <button type="submit" name="search">Search</button>
  <button type="submit" name="like">Like</button>
  <button type="submit" name="index">index</button>
  <span style="padding-left:30px;"><a href="/notes/new">New</a></span>
<%end%>

<div class="searches">
  <%=render 'names',:searches=>@categories,:name=>'name'%>
</div>

<%@notes.each do |e|%>
  <hr>
  <%n,g = e %>
  <div class="searches">
    <%=render 'names',:searches=>n.categories,:name=>'name'%>
  </div>

  <div class="note">
    <%=raw g%>
  </div>
  
  <div>
    <%=link_to 'Edit', edit_note_path(n)%>
    <%=link_to 'New-this', new_note_path(:id=>n.id)%>
  </div>
<%end%>
<br/>
<%=paginate @notes %>
